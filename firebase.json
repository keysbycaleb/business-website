{
  "hosting": [
    {
      "target": "main",
      "public": ".",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "functions/**",
        "admin/**",
        "sign/**",
        "auth/**",
        "portal/**"
      ],
      "rewrites": [
        { "source": "/intro", "destination": "/index.html" },
        { "source": "/work", "destination": "/index.html" },
        { "source": "/portfolio", "destination": "/index.html" },
        { "source": "/process", "destination": "/index.html" },
        { "source": "/about", "destination": "/index.html" },
        { "source": "/faq", "destination": "/index.html" },
        { "source": "/contact", "destination": "/index.html" },
        { "source": "/privacy", "destination": "/index.html" },
        { "source": "/terms", "destination": "/index.html" }
      ]
    },
    {
      "target": "admin",
      "public": "admin",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.js",
          "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]
        },
        {
          "source": "**/*.css",
          "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]
        }
      ]
    },
    {
      "target": "sign",
      "public": "sign",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "auth",
      "public": "auth",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "portal",
      "public": "portal",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.js",
          "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]
        },
        {
          "source": "**/*.css",
          "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]
        }
      ]
    }
  ],
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
