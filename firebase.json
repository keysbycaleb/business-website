{
  "hosting": [
    {
      "target": "main",
      "public": ".",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "functions/**",
        "admin/**",
        "sign/**",
        "auth/**"
      ]
    },
    {
      "target": "admin",
      "public": "admin",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.js",
          "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]
        },
        {
          "source": "**/*.css",
          "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]
        }
      ]
    },
    {
      "target": "sign",
      "public": "sign",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "auth",
      "public": "auth",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
